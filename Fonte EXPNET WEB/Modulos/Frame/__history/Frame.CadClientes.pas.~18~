{$R *.dfm}

uses uMenuAcesso;

procedure TFrameCadClientes.tvMenuNodeExpand(Sender: TObject;
  Node: TUniTreeNode);
begin
node.Expand(true);
end;

procedure TFrameCadClientes.UniFrameCreate(Sender: TObject);
begin
       tvMenu.Selected := tvMenu.Items[0]; // Deixar o Item já selecionado no TreeView;
end;

initialization
RegisterClass(TFrameCadClientes);
end.
